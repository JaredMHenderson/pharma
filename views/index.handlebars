  <script src="https://www.gstatic.com/firebasejs/4.10.1/firebase-app.js"></script>
  <script src="https://www.gstatic.com/firebasejs/4.10.1/firebase-auth.js"></script>
  <script src="https://www.gstatic.com/firebasejs/4.10.1/firebase-database.js"></script>
  <script src="https://www.gstatic.com/firebasejs/4.10.1/firebase-firestore.js"></script>




  <title>quick clinic</title>

</head>

<body>

  <div class="jumbotron jumbotron-fluid text-center" id="landing">
    <div class="container">
      <h1 class="display-4">
        <i class="fas fa-user-md fa-2x" style="color: #546E7A"></i>
      </h1>

      <h1 class="headline" style="color: #546E7A">quickclinic</h1>

      <h3 class="subHead">pharmacist portal</h3>
      <hr>
      <div class="col-xs-8 col-xs-offset-2">
        <form>
          <div class="form-group">
            <label for="email">Email</label>
            <input id="email" class="form-control" type="email">

          </div>
          <div class="form-group">
            <label for="password">Password</label>
            <input id="password" class="form-control" type="password">

          </div>
          <button class="btn btn-info btn-lg" id="submit" type="submit">Login</button>
          <button class="btn btn-info btn-lg" id="newUser" type="submit">New User</button>

        </form>
      </div>
    </div>

  <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN"
    crossorigin="anonymous"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.3/umd/popper.min.js" integrity="sha384-vFJXuSJphROIrBnz7yo7oB41mKfc8JzQZiCq4NCceLEaO4IHwicKwpJf9c9IpFgh"
    crossorigin="anonymous"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.2/js/bootstrap.min.js" integrity="sha384-alpBpkh1PFOepccYVYDB4do5UnbKysX5WZXm3XxPqe5iKTfUKjNkCk9SaVuEZflJ"
    crossorigin="anonymous"></script>
  <script src="https://www.gstatic.com/firebasejs/4.10.1/firebase.js"></script>
  <script>
    // Initialize Firebase
    var config = {
      apiKey: "AIzaSyAimvZ4DDH8O9AcCUdmIUQHOWKG-8oUDs0",
      authDomain: "pharmacy-60892.firebaseapp.com",
      databaseURL: "https://pharmacy-60892.firebaseio.com",
      projectId: "pharmacy-60892",
      storageBucket: "pharmacy-60892.appspot.com",
      messagingSenderId: "276089507868"
    };

    firebase.initializeApp(config);
    $('#submit').click((event) => {
      event.preventDefault();
      const email = $('#email').val().trim();
      const password = $('#password').val().trim();
      firebase.auth().signInWithEmailAndPassword(email, password).then((data, error) => {
        console.log('you are good');
      }).catch((error) => {
        if (error) {
          console.log('Here is our error', error);
          $('body').prepend(`<div class='help-message'>Oh no there was an error try again...</div>`)
        }
      });
    });

    $('#newUser').click((event) => {
      event.preventDefault();
      const email = $('#email').val().trim();
      const password = $('#password').val().trim();
      firebase.auth().createUserWithEmailAndPassword(email, password).then((data, error) => {
        console.log('you are good');
      }).catch((error) => {
        if (error) {
          console.log('Here is our error', error);
          $('body').prepend(`<div class='help-message'>Oh no there was an error try again...</div>`)
        }
      });
    });




  </script>
</body>

</html>
